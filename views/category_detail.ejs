<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-gray-100">
    <nav class="bg-gray-800 text-white">
      <div class="container mx-auto px-4 py-2">
        <a href="/" class="inline-block px-4 py-2">Home</a>
        <a href="<%= category.url %>/create" class="inline-block px-4 py-2"
          >Create Item</a
        >
      </div>
    </nav>

    <div class="container mx-auto mt-4 px-4">
      <h1 class="text-3xl font-bold py-4"><%= title %></h1>

      <% if (category) { %>
      <h2 class="text-2xl font-light"><%= category.name %></h2>
      <p class="text-xs"><%= category.description %></p>
      <% } %> <% if (items_In_Category.length) { %>
      <h3 class="text-lg font-semibold py-2">Items in this Category:</h3>
      <ul class="pl-4">
        <% items_In_Category.forEach(item=> { %>
        <li class="flex flex-col py-2">
          <div class="flex items-center">
            <p class="italic">
              <a class="underline" href="<%= item.url %>"> <%= item.name %> </a>
            </p>
            <span class="ml-2 text-gray-600 text-xs"
              >(Price: <%= item.price %>, Quantity: <%= item.quantity %>)</span
            >
          </div>
          <p class="text-xs">
            <span class="font-bold">Description:</span>
            <%= item.description %>
          </p>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p class="py-4 text-red-600">No items found in this category.</p>
      <% } %>
      <hr class="my-4" />
      <div class="w-full flex flex-col text-sm text-blue-500 items-end">
        <a href="<%= category.url %>/update">Update Category</a>
        <a href="<%= category.url %>/delete">Delete Category</a>
      </div>
    </div>
  </body>
</html>
